<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="../asset/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.demoapplication.demo.RootController">

    <!-- Sol Menü -->
    <left>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #2d3e50;">
            <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Menu" />
            <Button prefWidth="150" text="Dashboard" />
            <Button prefWidth="150" text="Firmware Update" />
            <Button prefWidth="150" text="Firmware Load" />
        </VBox>
    </left>

    <!-- Ana İçerik -->
    <center>
        <HBox spacing="20" style="-fx-padding: 20;">
            <!-- Form Kısmı (Sol Taraf) -->
            <VBox spacing="15" style="-fx-background-color: #f5f5f5; -fx-padding: 15;" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Customer Form" />
                <GridPane hgap="10" vgap="10">
                    <Label text="Select Customer:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <ComboBox fx:id="customerSelectBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Select Device:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <ComboBox fx:id="deviceSelectBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Select Function:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <ComboBox fx:id="functionSelectBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Vehicle Vendor:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <ComboBox fx:id="vendorSelectBox" prefWidth="100" promptText="Select Vendor" />
                        <ComboBox fx:id="modelSelectBox" prefWidth="100" promptText="Select Model" />
                    </HBox>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
                <HBox alignment="BASELINE_LEFT" spacing="10">
                    <Button style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Submit" />
                    <Button style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Cancel" />
                </HBox>
            </VBox>

            <!-- Sağ Taraf -->
            <VBox spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 15;" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Additional Information" />
                <Label text="Connection Status:" />
                <ListView fx:id="logListView" prefHeight="200" />

                <!-- Ek Bilgilendirme -->
                <Label text="VIN Number:" />
                <TextField fx:id="deviceNameField" promptText="IO923UE8238U9823U8" disable="true"/>

                <Label text="Firmware CPU Serial Number" />
                <TextField fx:id="ipAddressField" promptText="S23ET4X8U3948RU9"  disable="true"/>

                <Label text="Port:" />
                <TextField fx:id="portField" promptText="Enter port" />

                <!-- Alt Butonlar -->
                <HBox alignment="BASELINE_LEFT" spacing="10">
                    <Button fx:id="startListeningButton"  style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Start Listening" />
                    <Button fx:id="flashButton" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Flash" />
                    <Button fx:id="clearListeningButton" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Clear" />
                    <Button fx:id="stopListeningButton" style="-fx-background-color: #ffc107; -fx-text-fill: black;" text="Stop" />
                </HBox>
            </VBox>
        </HBox>
    </center>

    <!-- Üst Menü -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f8f9fa;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="OBD Portal Desktop" />
            <Button style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Home" />
            <Button style="-fx-background-color: #007bff; -fx-text-fill: white;" text="About" />
            <Button style="-fx-background-color: #ffc107; -fx-text-fill: black;" text="Settings" />
        </HBox>
    </top>
</BorderPane>
